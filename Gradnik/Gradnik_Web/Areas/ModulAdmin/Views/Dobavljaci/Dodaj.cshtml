@model Gradnik_Web.Areas.ModulAdmin.Models.DobavljaciDodajVM

@{
    ViewBag.Title = "Dodaj dobavljaca";
}

<link href="~/Content/form.css" rel="stylesheet" type="text/css" />

<div class="row operation-form">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="well">
                    @using (Html.BeginForm("Spremi", "Dobavljaci", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Naziv)
                                @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Unesite adresu" } })
                                @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Adresa)
                                @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Unesite adresu" } })
                                @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.Label("Kontakt Telefon")
                                @Html.EditorFor(model => model.KontaktTelefon, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Unesite telefon" } })
                                @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <div class="text-right">
                                    <button class="btn btn-danger"> <i class="fa fa-trash btn-icon-left"></i> Ponisti</button>
                                    <button type="submit" class="btn btn-success">Proceed <i class="fa fa-arrow-right btn-icon-right"></i></button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>