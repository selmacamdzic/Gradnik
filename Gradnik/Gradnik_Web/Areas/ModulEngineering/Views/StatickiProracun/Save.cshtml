@model Gradnik_Web.Areas.ModulEngineering.Models.StatickiProracunAddVM

@{ 
    Layout = null;
}

<div>
    @if (Model.ProracunMaterijali !=null)
    {
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Materijal</th>
                        <th>Količina</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.ProracunMaterijali)
                    {
                        <tr>
                            <td>@item.Materijal</td>
                            <td>@item.Količina</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="form-group">
        <label class="col-sm-3 control-label">Select2</label>

        <div class="col-sm-5">

                @Html.DropDownListFor(model => model.MaterijalId, Model.listaMaterijala , new { name = "test", @class="select2" })

        </div>
       <div class="form-group">
            @Html.LabelFor(model => model.Kolicina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-5">
                @Html.EditorFor(model => model.Kolicina, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kolicina, "", new { @class = "text-danger" })
            </div>
        </div>

        @Ajax.ActionLink("Dodaj", "AddMaterial", "StatickiProracun", new AjaxOptions { UpdateTargetId = "ajax" })
    </div>

</div>
}