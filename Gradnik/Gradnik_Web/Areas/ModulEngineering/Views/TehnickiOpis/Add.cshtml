@model Gradnik_Web.Areas.ModulEngineering.Models.TehnickiOpisAddVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    @using (Html.BeginForm("Save","TehnickiOpis",FormMethod.Post)) 
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.ProjektId)
        
        <div class="form-horizontal">
            <h4>Tehnicki opis</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Namjena objekta</label>
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.NamjenaObjekta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NamjenaObjekta, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Opis</label>

                <div class="col-sm-5">
                    @Html.TextAreaFor(mode => Model.Opis, new { id = "field-ta", @class = "form-control autogrow", @placeholder = "Unesite opis. " })

                </div>
            </div>
    
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Izvještaj</label>

                <div class="col-sm-5">
                    @Html.TextAreaFor(mode => Model.Izvjestaj, new { id = "field-ta", @class = "form-control autogrow", @placeholder = "Unesite izvještaj. " })

                </div>
            </div>
    
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Ostali radovi</label>

                <div class="col-sm-5">
                    @Html.TextAreaFor(mode => Model.OstaliRadovi, new { id = "field-ta", @class = "form-control autogrow", @placeholder = "Ostali radovi. " })

                </div>
            </div>
    
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Održavanje</label>

                <div class="col-sm-5">
                    @Html.TextAreaFor(mode => Model.Opis, new { id = "field-ta", @class = "form-control autogrow", @placeholder = "Unesite opis projekcija . " })

                </div>
            </div>
    
            <div class="form-group">
                <label for="field-ta" class="col-sm-3 control-label">Vijek trajanja</label>
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.VijekTrajanja, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.VijekTrajanja, "", new { @class = "text-danger" })
                </div>
            </div>



    
            <div class="form-group">
                <div class="col-md-offset-8 col-md-2">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    

</body>
</html>

<script src="~/assets/js/jquery.multi-select.js"></script>

<style>
    label{
  font-weight:bold;
}
</style>