@model Gradnik_Web.Areas.ModulSefGradilista.Models.NarudbaListViewModel

<link href="~/Scripts/multistep.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form id="msform">
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active">Materijal</li>
                <li>Potvrda narudzbe</li>
            </ul>
            <fieldset>
                <h2 class="fs-title">Materijal</h2>
                <table class="table table-hover table-bordered" id="narudzbaTable">
                    <thead>
                        <tr>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Id</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Naziv</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Opis</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Kolicina</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Materijali.Count; i++)
                        {
                        <tr class="odd gradeX">
                            <td>@Model.Materijali[i].Id</td>
                            <td>@Model.Materijali[i].Naziv</td>
                            <td>@Model.Materijali[i].Opis</td>
                            <td><input type="text" id="iznos@(i)" value="1" /></td>
                        </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Id</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Naziv</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Opis</th>
                            <th style="background-color:rgb(48, 54, 65); color:white;">Kolicina</th>
                        </tr>
                    </tfoot>
                </table>
                <input type="button" name="previous" class="previous action-button-previous" value="Prethodno" />
                <input type="button" name="next" class="next action-button" value="Sljedece" id="prviKorak" />
            </fieldset>
            <fieldset>
                <h2 class="fs-title">Potvrdi narudzbu</h2>
                <h3 class="fs-subtitle">Your presence on the social network</h3>
                <table id="example" class="display" style="width:100%"></table>
                <input type="button" name="previous" class="previous action-button-previous" value="Prethodno" />
                <input type="button" name="next" class="next action-button" value="Spremi" id="spremi" />
            </fieldset>
        </form>
    </div>
</div>
<!-- /.MultiStep Form -->

<script src="~/Scripts/multistep.js"></script>
<script src="~/Scripts/feature/narudzbe.js"></script>

