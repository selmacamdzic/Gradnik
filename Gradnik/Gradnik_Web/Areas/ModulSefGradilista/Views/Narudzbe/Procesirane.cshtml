@model IEnumerable<Gradnik_Data.Models.Narudzba>

<table class="table table-hover table-bordered" id="procesiraneNarudzbe">
    <thead>
        <tr>
            <th style="background-color:rgb(48, 54, 65); color:white;">Id</th>
            <th style="background-color:rgb(48, 54, 65); color:white;">Datum</th>
            <th style="background-color:rgb(48, 54, 65); color:white;">Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="odd gradeX">

                <td>@item.Id</td>
                <td>@item.Datum</td>
                <td><button class="btn btn-success">Detalji Ulaza</button></td>
            </tr>
        }


    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Datum</th>
            <th>Akcija</th>
        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () {
        $('#procesiraneNarudzbe').DataTable();
    });
</script>
