<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="projekti"></div>
        </div>
        <div class="col-md-12">
            <div id="prosjecnaCijena"></div>
        </div>
    </div>
</div>

<script>

    $.ajax({
        type: "GET",
        url: "/ModulDirektor/Home/BrojRadnikaPoProjektima",
        success: function (data) {
            Highcharts.chart('projekti', {
                chart: {
                    type: 'bar'
                },
                title: {
                    text: 'Broj radnika po projektima'
                },
                xAxis: {
                    title: {
                        text: 'Projekti'
                    }
                },
                yAxis: {
                    labels: {
                        overflow: 'justify'
                    },
                    title: {
                        text: 'Broj radnika'
                    }
                },
                tooltip: {
                    valueSuffix: ' radnika'
                },
                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'top',
                    x: -40,
                    y: 80,
                    floating: true,
                    borderWidth: 1,
                    backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                    shadow: true
                },
                credits: {
                    enabled: false
                },
                series: data
            });
        }
    });


    $.ajax({
        type: "GET",
        url: "/ModulDirektor/Home/ProsjecnaCijenaPoMaterijalu",
        success: function (data) {
            Highcharts.chart('prosjecnaCijena', {
                chart: {
                    type: 'bar'
                },
                title: {
                    text: 'Prosjecna cijena po materijalu'
                },
                xAxis: {
                    title: {
                        text: 'Materijal'
                    }
                },
                yAxis: {
                    labels: {
                        overflow: 'justify'
                    },
                    title: {
                        text: 'Cijena'
                    }
                },
                tooltip: {
                    valueSuffix: ' KM'
                },
                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'top',
                    x: -40,
                    y: 80,
                    floating: true,
                    borderWidth: 1,
                    backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                    shadow: true
                },
                credits: {
                    enabled: false
                },
                series: data
            });
        }
    });
</script>