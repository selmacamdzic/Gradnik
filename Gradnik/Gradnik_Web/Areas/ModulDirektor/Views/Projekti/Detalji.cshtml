@model Gradnik_Web.Areas.ModulDirektor.Models.ProjekatDetaljiVM

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Detalji</a></li>
    <li><a data-toggle="tab" href="#menu1">Radnici</a></li>
    <li><a data-toggle="tab" href="#menu2">Dokumentacija</a></li>
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.Naziv, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.Lokacija, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.Lokacija, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.DatumUgovora, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.DatumUgovora, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.PocetakProjekta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.PocetakProjekta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.KrajProjekta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.KrajProjekta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.InvestitorId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.InvestitorId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Projekat.KorisnikId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Projekat.KorisnikId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
        </div>
    </div>
    <div id="menu1" class="tab-pane fade">
        <h3>Radnici</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Ime i Prezime</th>
                    <th>JMBG</th>
                    <th>Zvanje</th>
                    <th>Tip Posla</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Radnici)
                {

                    <tr>
                        <td>@item.Ime @item.Prezime</td>
                        <td>@item.JMBG</td>
                        <td>@item.Zvanje</td>
                        <td>@item.TipPosla</td>
                        <td>
                            @Html.ActionLink("Detalji", "Radnici", "Radnici", new { id = item.RadnikId }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Ime i Prezime</th>
                    <th>JMBG</th>
                    <th>Zvanje</th>
                    <th>Tip Posla</th>
                    <th>Akcija</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="menu2" class="tab-pane fade">
        <h3>Dokumentacija</h3>
        @Html.Action("_ListaDokumenata", new { id = Model.Projekat.Id })
    </div>
</div>
