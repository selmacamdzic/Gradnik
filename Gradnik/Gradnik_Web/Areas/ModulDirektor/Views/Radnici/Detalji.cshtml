@model Gradnik_Web.Areas.ModulDirektor.Models.RadniciDetaljiVM

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Detalji</a></li>
    <li><a data-toggle="tab" href="#menu1">Zavrseni Projekat</a></li>
    <li><a data-toggle="tab" href="#menu2">Trenutni Projekt</a></li>
