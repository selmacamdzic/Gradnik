    <div id="menu1" class="tab-pane fade">
        @if (Model.TrenutniProjekat != null)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Naziv</th>
                    <th>Datum</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.TrenutniProjekat.Naziv</td>
                    <td>@Model.TrenutniProjekat.Datum.ToString("dd.MM.yyyy")</td>
                    <td>
                        @Html.ActionLink("Detalji", "Detalji", new { id = @Model.TrenutniProjekat.ProjektId })
                    </td>
                </tr>

            </tbody>
            <tfoot>
                <tr>
                    <th>Naziv</th>
                    <th>Datum</th>
                    <th>Akcija</th>
                </tr>
            </tfoot>
        </table>
        }
        else
        {
            <p>Radnik trenutno nije zaduzen.</p>
        }

    </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Zavrseni projekti</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>Datum</th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ZavrseniProjekti)
                {
                    <tr>
                        <td>@item.Naziv</td>
                        <td>@item.Datum.ToString("dd.MM.yyyy")</td>
                        <td>
                            @Html.ActionLink("Detalji", "Detalji", new { id = item.ProjektId })
                        </td>
                    </tr>

            }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Naziv</th>
                        <th>Datum</th>
                        <th>Akcija</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>