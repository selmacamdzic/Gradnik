<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/project_row_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/text_view_shape_green"
            android:gravity="center"
            android:text="S"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/project_row_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/project_row_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/project_row_photo"
            android:layout_toRightOf="@+id/project_row_photo"
            android:gravity="fill_vertical"
            android:text="First Project"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/project_row_location"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/project_row_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/project_row_photo"
            android:layout_toRightOf="@+id/project_row_photo"
            android:gravity="center_vertical"
            android:text="Sarajevo, BiH"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/project_row_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/project_row_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="20.09.2018"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/project_row_name"
            android:layout_toStartOf="@+id/project_row_expiry_date"
            card_view:srcCompat="@drawable/ic_expiry_date"
            android:layout_toLeftOf="@+id/project_row_expiry_date" />
    </RelativeLayout>

</android.support.v7.widget.CardView>