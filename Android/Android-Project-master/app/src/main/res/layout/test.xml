<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_main_user_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/employee" />

        <TextView
            android:id="@+id/activity_main_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_user_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Hussain Abdelilah"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_main_user_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_location"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/activity_main_user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/imageView5"
            android:gravity="center"
            android:text="@string/address"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imageView5" />

        <TextView
            android:id="@+id/activity_main_location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView13"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_toEndOf="@+id/textView13"
            android:layout_toRightOf="@+id/textView13"
            android:gravity="center"
            android:text="Ilidza, BiH"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_phone"
            android:layout_alignLeft="@+id/imageView5" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView6"
            android:gravity="center"
            android:text="@string/phone_number"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imageView6" />

        <TextView
            android:id="@+id/activity_main_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/activity_main_location"
            android:layout_alignTop="@+id/textView15"
            android:gravity="center"
            android:text="062961404"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/activity_main_location" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_rank"
            android:layout_alignLeft="@+id/imageView5" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView6"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:gravity="center"
            android:text="@string/profession"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_profession"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/activity_main_location"
            android:layout_alignTop="@+id/textView17"
            android:gravity="center"
            android:text="Direktor"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/activity_main_location" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/imageView7"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_email"
            android:layout_alignLeft="@+id/imageView5" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imageView7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView5"
            android:gravity="center"
            android:text="@string/e_mail"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imageView5" />

        <TextView
            android:id="@+id/activity_main_email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/activity_main_location"
            android:layout_alignTop="@+id/textView21"
            android:gravity="center"
            android:text="haris@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/activity_main_location" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/textView21"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_birthday"
            android:layout_alignLeft="@+id/imageView5" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView21"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView5"
            android:gravity="center"
            android:text="@string/birthday"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imageView5" />

        <TextView
            android:id="@+id/activity_main_birthday"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/activity_main_location"
            android:layout_alignTop="@+id/textView23"
            android:gravity="center"
            android:text="19.10.1993"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/activity_main_location" />

        <Button
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/textView23"
            android:layout_alignStart="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_marginTop="15dp"
            android:background="@color/blue"
            android:padding="5dp"
            android:onClick="showAllEmployees"
            android:text="Prikazi svi zaposlanici" />

    </RelativeLayout>

</LinearLayout>